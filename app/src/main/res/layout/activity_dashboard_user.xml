<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back01"
        style="@style/parent.contentLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="30dp">

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/menu" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/name1"
                android:textColor="@color/new_blue"

                android:textSize="18dp" />

            <ImageButton
                android:layout_width="30dp"
                android:id="@+id/logoutBtn"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/logout" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/test111"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/del_boy" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub1Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="New \nPick-Up" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub3Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Pick-Up \nHistory" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub5Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="FAQ" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub2Title"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Pick-Up \nStatus" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub4Title"
                        android:layout_gravity="center"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:text="Update \nData" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:minHeight="100dp"
                    android:backgroundTint="@color/new_blue"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewSub6Title"
                        android:layout_gravity="center"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:layout_centerInParent="true"
                        android:text="E-Waste \nInfo" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
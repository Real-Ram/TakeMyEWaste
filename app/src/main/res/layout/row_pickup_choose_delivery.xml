<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/new_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/nameEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:text="firstname lastname" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view1"
            android:layout_height="1dp"
            android:layout_below="@id/nameEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/mobileTv"
            android:layout_below="@id/view1"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile" />

        <TextView
            android:id="@+id/mobileEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileTv"
            android:text="987654321" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view2"
            android:layout_height="1dp"
            android:layout_below="@id/mobileEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/productTv"
            android:layout_below="@id/view2"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product" />

        <TextView
            android:id="@+id/productEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productTv"
            android:text="1. Product\n2. Product" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view3"
            android:layout_height="1dp"
            android:layout_below="@id/productEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/addressTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:text="Address" />

        <TextView
            android:id="@+id/addressEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressTv"
            android:text="colony, city, state" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view4"
            android:layout_height="1dp"
            android:layout_below="@id/addressEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/timeTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:text="Time" />

        <TextView
            android:id="@+id/timeEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTv"
            android:text="dd:mm:yyyy hh:mm:ss" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view5"
            android:layout_height="1dp"
            android:layout_below="@id/timeEt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/deliveryBoyNameTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view5"
            android:text="Delivery Boy Name" />

        <EditText
            android:id="@+id/deliveryBoyNameEt"
            style="@style/TetxtsizeforForm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="FirstName LastName"
            android:inputType="textPersonName"
            android:maxLength="24"
            android:layout_below="@+id/deliveryBoyNameTv"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textColorHint="@color/hint_white"
            android:textCursorDrawable="@drawable/cursor_color" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view6"
            android:layout_height="1dp"
            android:layout_below="@id/deliveryBoyNameEt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/deliveryBoyMobileTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view6"
            android:text="Delivery Boy Mobile" />

        <EditText
            android:id="@+id/deliveryBoyMobileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:inputType="phone"
            android:maxLength="10"
            android:layout_below="@+id/deliveryBoyMobileTv"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:hint="987654321"
            android:textColorHint="@color/hint_white"                           android:textCursorDrawable="@drawable/cursor_color"
            style="@style/TetxtsizeforForm2" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view7"
            android:layout_height="1dp"
            android:layout_below="@id/deliveryBoyMobileEt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/deliveryBoyDateTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view7"
            android:text="Estimate Pick-Up Date" />

        <EditText
            android:id="@+id/deliveryBoyDateEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:inputType="date"
            android:maxLength="10"
            android:layout_below="@+id/deliveryBoyDateTv"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:hint="please enter the estimate pickup date"
            android:textColorHint="@color/hint_white"                           android:textCursorDrawable="@drawable/cursor_color"
            style="@style/TetxtsizeforForm2" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view8"
            android:layout_height="1dp"
            android:layout_below="@id/deliveryBoyDateEt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />


        <LinearLayout
            android:id="@+id/goToDeliveryBtn"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_below="@+id/view8"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Go For Delivery"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
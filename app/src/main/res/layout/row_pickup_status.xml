<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/new_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/approveTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Not Approved" />

        <TextView
            android:id="@+id/approveTextEt"
            android:layout_below="@+id/approveTv"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:text="There is a lot traffic wait for the approvement" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_below="@id/approveTextEt"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/nameEt"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:text="firstname lastname" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view1"
            android:layout_height="1dp"
            android:layout_below="@id/nameEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/mobileTv"
            android:layout_below="@id/view1"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile" />

        <TextView
            android:id="@+id/mobileEt"
            android:layout_below="@+id/mobileTv"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="987654321" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view2"
            android:layout_height="1dp"
            android:layout_below="@id/mobileEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/productTv"
            android:layout_below="@id/view2"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product" />

        <TextView
            android:id="@+id/productEt"
            android:layout_below="@+id/productTv"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Product\n2. Product" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view3"
            android:layout_height="1dp"
            android:layout_below="@id/productEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/addressTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:text="Address" />

        <TextView
            android:id="@+id/addressEt"
            android:layout_below="@+id/addressTv"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="colony, city, state" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view4"
            android:layout_height="1dp"
            android:layout_below="@id/addressEt"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/timeTv"
            style="@style/pickupstatus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:text="Time" />

        <TextView
            android:id="@+id/timeEt"
            android:layout_below="@+id/timeTv"
            style="@style/pickupstatus_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dd:mm:yyyy hh:mm:ss" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view5"
            android:layout_height="1dp"
            android:layout_below="@id/timeEt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>